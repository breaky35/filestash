{
  "general": {
    "title": "Filestash",
    "theme": "light",
    "default_connection": "s3"
  },
  "features": {
    "file_previews": true,
    "sharing": false,
    "search": true
  },
  "log": {
    "level": "info"
  },
  "email": {},
  "oauth": {},
  "connections": [
    {
      "type": "s3",
      "label": "Cloudflare R2",
      "bucket": "filestash-bucket",
      "region": "auto",
      "endpoint": "https://<YOUR_ACCOUNT_ID>.r2.cloudflarestorage.com",
      "access_key": "${R2_ACCESS_KEY}",
      "secret_key": "${R2_SECRET_KEY}",
      "prefix": "uploads/"
    },
    {
      "type": "webdav",
      "label": "WebDav"
    },
    {
      "type": "ftp",
      "label": "FTP"
    },
    {
      "type": "sftp",
      "label": "SFTP"
    },
    {
      "type": "git",
      "label": "GIT"
    },
    {
      "type": "dropbox",
      "label": "Dropbox"
    },
    {
      "type": "gdrive",
      "label": "Drive"
    }
  ]
}
